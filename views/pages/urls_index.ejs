<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/header') %>
  <main style="margin: 1em">
    <h3><%= greeting %></h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">TinyApp URL</th>
          <th scope="col">Long URL</th>
          <th scope="col" colspan=3>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (const key in urls) { %>
          <tr>
            <td><a href="/urls/<%= key %>"><%= key %></a></td>
            <td><a href=<%= urls[key] %>><%= urls[key] %></a></td>
            <td>
              <form method="GET" action="/u/<%= key %>">
                <button type="submit" class="btn btn-success">Launch</button>
              </form>
            </td>
            <td>
              <form method="POST" action="/urls/<%= key %>/update">
                <button type="submit" class="btn btn-primary">Edit</button>
              </form>
            </td>
            <td>
              <form method="POST" action="/urls/<%= key %>/delete">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
      <td></td>
      </table>
  </main>
</body>

<%- include('../partials/footer') %>
</html>
