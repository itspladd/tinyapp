<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/header') %>
  <main style="margin: 1em">
    <h3><%= locals.user ? `${user.username}'s` : 'My' %> URLs:</h3>
    <% if (urls.length > 0) { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">BabyURL</th>
            <th scope="col">Long URL</th>
            <th scope="col" colspan=3>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (const url of urls) { %>
            <tr>
              <td><a href="/urls/<%= url.shortURL %>"><%= url.shortURL %></a></td>
              <td><a href=<%= url.longURL %>><%= url.longURL %></a></td>
              <td>
                <form method="GET" action="/u/<%= url.shortURL %>">
                  <button type="submit" class="btn btn-success">Launch</button>
                </form>
              </td>
              <td>
                <form method="GET" action="/urls/<%= url.shortURL %>">
                  <button type="submit" class="btn btn-primary">Edit</button>
                </form>
              </td>
              <td>
                <form method="POST" action="/urls/<%= url.shortURL %>/delete">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
        <td></td>
        </table>
    <% } else { %>
      <div class="alert alert-info">
        Whoops, you haven't created any BabyURLs! <a href="/urls/new">Create one here!</a>
      </div>
    <% } %>
  </main>
</body>

<%- include('../partials/footer') %>
</html>
